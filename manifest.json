{
  "manifest_version": 2,
  "name": "New Tab Page Container light",
  "version": "1.11",

  "description": "Show contextual identities on new tab page",

  "icons": {
    "16": "/icons/new-tab.svg",
    "32": "/icons/new-tab.svg",
    "64": "/icons/new-tab.svg",
    "96": "/icons/new-tab.svg",
    "128": "/icons/new-tab.svg"
  },

  "browser_action": {
    "default_title": "New Tab Page Container light",
    "default_icon": "/icons/new-tab.svg",
    "theme_icons": [
      {
        "light": "/icons/new-tab-light.svg",
        "dark": "/icons/new-tab.svg",
        "size": 16
      },
      {
        "light": "/icons/new-tab-light.svg",
        "dark": "/icons/new-tab.svg",
        "size": 32
      },
      {
        "light": "/icons/new-tab-light.svg",
        "dark": "/icons/new-tab.svg",
        "size": 64
      },
      {
        "light": "/icons/new-tab-light.svg",
        "dark": "/icons/new-tab.svg",
        "size": 96
      },
      {
        "light": "/icons/new-tab-light.svg",
        "dark": "/icons/new-tab.svg",
        "size": 128
      }
    ]
  },

  "permissions": [
    "contextualIdentities",
    "cookies",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>", "*://*/*"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "64.0",
      "id": "new_tab_page_container_light@lighted"
    }
  },

  "chrome_url_overrides" : {
    "newtab": "new-tab-page.html"
  },

  "background": {
    "scripts": [ "background.js" ]
  }
}
